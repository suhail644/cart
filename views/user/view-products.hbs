  <section>
    <div class="container mt-5">
      <div class="row">
        {{#each products}}

        <div class="col-md-3 p-3">
          <div class="card" style="width: 13rem; height:13rem">
            <img
              src="/product-images/{{this._id}}.jpg"
              alt="Card image cap"
              style="height: 12rem;"
              class="card-img-top" alt="...">
          </div>
          <div class="card" style="width: 13rem; height:8rem">
            <div class="card-body">
              <h5 class="card-title">{{this.Name}}</h5>
              <p class="card-text">Rs.{{this.Price}}</p>
              <p class="card-text">{{this.Description}}</p>
            </div>
          </div>
          <div class="card text-center" style="width: 13rem; height:5rem">
            <div class="card-body">
              <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
            </div>
          </div>
          
        </div>
        {{/each}}
      </div>
    </div>
  </section>

  
